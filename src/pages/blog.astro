---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
  (a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);
---

<Layout>
  <div class="space-y-8">
    {posts.map(post => (
      <div class="backdrop-blur-md bg-black/40 p-4 rounded-xl shadow-lg">
        <h2 class="text-2xl font-bold mb-2">
          <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
        </h2>
        <p class="text-sm text-gray-400 mb-2">
          <span class='date'>{new Date(post.data.publishDate).toLocaleDateString()}</span>
          <span class='author'>by {post.data.author}</span>
        </p>
        
        <p class="text-gray-400">{post.data.description ?? ''}</p>
      </div>
    ))}
  </div>
</Layout>
