---
import CalendarEvent from './CalendarEvent.astro';
import { Day } from './interfaces.ts';

const { day }: { day: Day } = Astro.props;
---

<div class={`flex xl:aspect-square max-xl:min-h-[60px] p-3.5 ${day.events && day.events.length > 0 ? 'relative' : ''} bg-white border-r border-b border-indigo-200 transition-all duration-300 hover:bg-indigo-50 cursor-pointer`}>
  {day.today ? (
    <span class="text-xs font-semibold text-indigo-600 sm:text-white sm:w-6 sm:h-6 rounded-full sm:flex items-center justify-center sm:bg-indigo-600">
      {day.dayNumber}
    </span>
  ) : (
    <span class="text-xs font-semibold text-gray-400">{day.dayNumber}</span>
  )}

  {day.events && day.events.length > 0 ? (
    day.events.map((event) => (
      <CalendarEvent event={event} />
    ))
  ) : (
    ''
  )}
</div>
